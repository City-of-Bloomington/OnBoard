{% extends "html/layouts/committee.twig" %}
{% import  "html/macros/forms.twig" as forms %}
{% block content %}
<section>
    <header>
        <h1>{{ note.id ? _('note_edit') : _('note_add') }}</h1>
    </header>

    <form class="usa-form" method="post">
        <fieldset class="usa-fieldset">
            {{ forms.field_textarea('note', 'note', _('note'), note.note, true ) }}
            {{ forms.button('submit', _('save'), 'save') }}
            {{ forms.actionLink( return_url, _('cancel'), 'cancel' ) }}
        </fieldset>
    </form>
</section>
{% endblock %}
