{% extends "html/layouts/committee.twig" %}
{% import  "html/macros/forms.twig" as forms %}
{% block content %}
<section>
    <h2>{{ _(['seat', 'seats', 10]) }}</h2>
    {% if isAllowed('seats', 'add') %}
    {{ forms.actionLink(uri('seats.add') ~ '?committee_id=' ~ committee.getId(), _('seat_add'), 'add') }}
    {% endif %}

    <ul class="usa-card-group grid-row margin-top-3">
    {% set userCanEdit=isAllowed('seats', 'update') %}
    {% for s in seats %}
        <li class="grid-col-12 margin-bottom-2">
            <div class="usa-card__container">
                <div class="usa-card__header grid-row flex-row">
                    <div class="grid-col flex-1 display-flex flex-align-center">
                        <h3 class="usa-card__heading">{{ s.getCode() }} {{ s.getName() }}</h3>
                    </div>
                    <div class="grid-col-auto display-flex flex-align-center">
                        <a class="usa-link" href="{{ uri('seats.view', {id: s.getId()}) }}">{{ _('view') }}</a>
                    </div>
                </div>
                <div class="usa-card__footer grid-row">
                    <div class="grid-col flex-1">
                        <div>
                            <strong>{{ _('appointed_by') }}:</strong> {{ s.getAppointer() }}
                        </div>
                        <div>
                            <strong>{{ _('type') }}:</strong> {{ s.getType() }}
                        </div>
                        <div>
                            <strong>{{ _('startDate') }}:</strong> {{ s.getStartDate(DATE_FORMAT) }}
                        </div>
                        <div>
                            <strong>{{ _('endDate')   }}:</strong> {{ s.getEndDate  (DATE_FORMAT) }}
                        </div>
                    </div>
                </div>
            </div>
        </li>
    {% endfor %}
    </ul>
</section>
{% endblock %}
