{% extends "html/layouts/default.twig" %}
{% block content %}
<section class="container">
    <header class="d-flex flex-wrap">
        <h1 class="me-3">{{ committee.getName() }}
            {% set vacancies = committee.getVacancyCount() %}
            {% if vacancies %}({{ vacancies }} {{ _(['vacancy', 'vacancies', vacancies]) }}){% endif %}
        </h1>
        {{ include('html/committees/partials/header.twig') }}

        <h2>{{ _('committeeHistory') }}</h2>
    </header>

    <div>
    {% for h in history %}
    <details>
        <summary>
            {{ h.date }}: {{ h.person }} {{ h.tablename }}:{{ h.action }}
        </summary>
        {% for change in h.changes %}
        <table class="table table-hover table-bordered">
        <thead>
            <tr><th></th>
                {% for s in states %}
                <th>{{ s }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
        {% for k, c in change %}
            <tr><th>{{ k }}</th>
                {% for s in states %}
                <td>{% if c[s] is defined %}{{ c[s] }}{% endif %}</td>
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
        </table>
        {% endfor %}
    </details>
    {% endfor %}
    </div>
</section>
{% endblock %}
