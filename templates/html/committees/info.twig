{% extends "html/layouts/default.twig" %}
{% import  "html/macros/forms.twig" as forms %}
{% block content %}
<section class="container my-3">
    <header class="mb-3">
        <h1>{{ committee.getName() }}
            {% set vacancies = committee.getVacancyCount() %}
            {% if vacancies %}({{ vacancies }} {{ _(['vacancy', 'vacancies', vacancies]) }}){% endif %}
        </h1>
        {{ include('html/committees/partials/header.twig') }}
    </header>
    {% if actionLinks %}
    {{ include('html/partials/actionLinks.twig') }}
    {% endif %}

    <h2>{{ _('committee_details') }}</h2>
    <dl class="row">
        {% if committee.getType()          %}<dt class="col-sm-3">{{ _('type'         ) }}</dt><dd class="col-sm-9">{{ committee.getType()               }}</dd>{% endif %}
        {% if committee.getYearFormed()    %}<dt class="col-sm-3">{{ _('yearFormed'   ) }}</dt><dd class="col-sm-9">{{ committee.getYearFormed()         }}</dd>{% endif %}
        {% if committee.getEndDate()       %}<dt class="col-sm-3">{{ _('endDate'      ) }}</dt><dd class="col-sm-9">{{ committee.getEndDate(DATE_FORMAT) }}</dd>{% endif %}
        {% if committee.getStatutoryName() %}<dt class="col-sm-3">{{ _('statutoryName') }}</dt><dd class="col-sm-9">{{ committee.getStatutoryName()      }}</dd>{% endif %}
        {% if committee.getCode()          %}<dt class="col-sm-3">{{ _('code'         ) }}</dt><dd class="col-sm-9">{{ committee.getCode()               }}</dd>{% endif %}
        {% if committee.getWebsite()       %}<dt class="col-sm-3">{{ _('website'      ) }}</dt><dd class="col-sm-9"><a href="{{ committee.getWebsite() }}">{{ committee.getWebsite() }}</a></dd>{% endif %}
        {% if committee.getVideoArchive()  %}<dt class="col-sm-3">{{ _('videoArchive' ) }}</dt><dd class="col-sm-9">{{ committee.getVideoArchive()       }}</dd>{% endif %}
        {% if committee.getEmail()         %}<dt class="col-sm-3">{{ _('email'        ) }}</dt><dd class="col-sm-9">{{ committee.getEmail()              }}</dd>{% endif %}
        {% if committee.getPhone()         %}<dt class="col-sm-3">{{ _('phone'        ) }}</dt><dd class="col-sm-9">{{ committee.getPhone()              }}</dd>{% endif %}
        {% if committee.getAddress()       %}<dt class="col-sm-3">{{ _('address'      ) }}</dt><dd class="col-sm-9">{{ committee.getAddress()            }}</dd>{% endif %}
        {% if committee.getCalendarId()    %}<dt class="col-sm-3">{{ _('calendarId'   ) }}</dt><dd class="col-sm-9"><a href="https://calendar.google.com/calendar/embed?src={{ committee.getCalendarId() }}">{{ committee.getCalendarId() }}</a></dd>{% endif %}
        {% if isAllowed('committees', 'update') %}
        <dt class="col-sm-3">{{ _('termEndWarningDays' ) }}</dt><dd class="col-sm-9">{{ committee.getTermEndWarningDays()  }}</dd>
        <dt class="col-sm-3">{{ _('applicationLifetime') }}</dt><dd class="col-sm-9">{{ committee.getApplicationLifetime() }}</dd>
        {% endif %}
    </dl>

    {{ committee.getDescription()|markdown_to_html }}

    {% if committee.getMeetingSchedule() %}
    <h2>{{ _('meetingSchedule') }}</h2>
    {{ committee.getMeetingSchedule()|markdown_to_html }}
    {% endif %}

    <h2>{{ _(['liaison', 'liaisons', 10]) }}</h2>
    {% if isAllowed('liaisons', 'update') %}
    {{ forms.actionLink(uri('liaisons.update'), _('liaison_add'), 'add') }}
    {% endif %}

    {% if liaisons %}
    <table class="table">
    {% for row in liaisons %}
    <tr><td>{{ _(row.type) }}</td>
        <td><a href="{{ uri('people.view') }}?person_id={{ row.person_id }}">{{ row.firstname }} {{ row.lastname }}</a></td>
        {% if isAllowed('people', 'viewContactInfo') %}
        <td>{{ row.email }}</td>
        <td>{{ row.phone }}</td>
        {% endif %}

        {% if row.actionLinks %}
        <td>{{ include('html/partials/moreLinks.twig', {actionLinks: row.actionLinks}, with_context=false) }}</td>
        {% endif %}
    {% endfor %}
    </table>
    {% endif %}
</section>
{% endblock %}
