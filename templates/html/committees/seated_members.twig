{% extends "html/layouts/default.twig" %}
{% block content %}
<section>
    <header>
        <h2>{{ committee.getName() }}
            {% set vacancies = committee.getVacancyCount() %}
            {% if vacancies %}({{ vacancies }} {{ _(['vacancy', 'vacancies', vacancies]) }}){% endif %}
        </h2>
        {{ include('html/committees/partials/header.twig') }}
    </header>
    {% if actionLinks %}
    {{ include('html/partials/actionLinks.twig') }}
    {% endif %}

    <table>
        <thead>
            <tr><th>{{ _('seat'        ) }}</th>
                <th>{{ _('seat_term'   ) }}</th>
                <th>{{ _('appointed_by') }}</th>
                <th>{{ _('name'        ) }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for row in seat_data %}
            <tr><td><a href="{{ uri('seats.view') }}?seat_id={{ row.seat_id }}">{{ row.seat_code }} {{ row.seat_name }}</a></td>
                <td>{{ row.term_startDate }} - {{ row.term_endDate }}</td>
                <td>{{ row.appointer_name }}{{ row.seat_voting ? ' (voting)' : '' }}</td>
                <td>{% if row.member_person_id %}
                    {{ row.member_firstname }} {{ row.member_lastname }}
                    {% else %}
                    {{ _('vacant') }}
                    {% endif %}

                    {% if row.offices %}
                    {% for office in row.offices|split(',') %}
                        {% set o=office|split('|') %}
                        {{ o[1] }}
                    {% endfor %}
                    {% endif %}

                    {% if committee.allowsAlternates() %}
                        {% if row.alternate_person_id %}
                        {{ row.alternate_firstname }} {{ row.altername_lastname }}
                        {% else %}
                        {{ _('alternate_vacant') }}
                        {% endif %}
                    {% endif %}
                </td>
                <td>{% if row.actionLinks %}
                    {% for a in row.actionLinks %}<a href="{{ a.url }}">{{ a.label }}</a>{% endfor %}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if isAllowed('seats', 'update') %}
    <a href="{{ uri('seats.update') }}?committee_id={{ committee.getId() }}">{{ _('seat_add') }}</a>
    {% endif %}
    {% if committee.hasVacancy() %}
    <a href="{{ uri('applicants.apply') }}?committee_id={{ committee.getId() }}">{{ _('apply') }}</a>
    {% endif %}
</section>

{% endblock %}
