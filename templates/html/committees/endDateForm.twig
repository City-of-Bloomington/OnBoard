{% extends "html/layouts/committee.twig" %}
{% import  "html/macros/forms.twig" as forms %}
{% block content %}
<section>
    <h2>{{ _('committee_end') }}</h2>
    <form class="usa-form" method="post">
        <fieldset class="usa-fieldset usa-fieldset--large">
            <input name="committee_id" type="hidden" value="{{ committee.getId() }}" />
            <label for="endDate" class="form-label">{{ _('endDate') }}</label>
            <div class="usa-date-picker">
                <input name="endDate" id="endDate" value="{{ 'now'|date('Y-m-d') }}" type="date" class="usa-input" />
            </div>
        </fieldset>

        {{ forms.button('submit', _('save'), 'save') }}

        {% if committee.getId() %}
        {{ forms.actionLink(uri('committees.info', {id: committee.getId()}), _('cancel') ) }}
        {% else %}
        {{ forms.actionLink(uri('committees.index'), _('cancel') ) }}
        {% endif %}

        {# <a class="btn btn-danger" href="{{ uri('committees.info', {id: committee.getId()}) }}">{{ _('cancel') }}</a> #}
    </form>
</section>
{% endblock %}
