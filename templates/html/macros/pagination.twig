{% macro pageLinks(query={}, totalItemCount=0, itemsPerPage=20, pageNumber=1, pageRange=3) %}
    {% set pageCount = (totalItemCount / itemsPerPage)|round(0, 'ceil') %}
    {% if pageRange > pageCount %}
        {% set pageRange = pageCount %}
    {% endif %}

    {% set delta = (pageRange / 2)|round(0, 'ceil') %}

    {% if (pageNumber - delta) > (pageCount - pageRange) %}
        {% set lowerBound = pageCount - pageRange + 1 %}
        {% set upperBound = pageCount %}
    {% else %}
        {% if (pageNumber - delta) < 0 %}
            {% set delta = pageNumber %}
        {% endif %}

        {% set lowerBound = (pageNumber - delta + 1) %}
        {% set upperBound = (pageNumber - delta + pageRange) %}
    {% endif %}

    <nav aria-label="Pagination" class="usa-pagination">
        <ul class="usa-pagination__list">
            {% set url = url(ROUTE_NAME) %}

            {% if pageNumber > 1 %}
            <li class="usa-pagination__item usa-pagination__arrow">
                <a
                    href="{{ url ~ '?' ~ query|merge({page: pageNumber - 1}) }}"
                    class="usa-pagination__link usa-pagination__previous-page"
                    aria-label="Previous page">
                    <svg class="usa-icon" aria-hidden="true" role="img">
                        <use href="{{ USWDS_URL }}/img/sprite.svg#navigate_before"></use>
                    </svg>
                    <span class="usa-pagination__link-text">Previous</span>
                </a>
            </li>
            {% endif %}

            {% if pageNumber >= 3 %}
            <li class="usa-pagination__item usa-pagination__page-no">
                <a
                    href="{{ url ~ '?' ~ query|merge({page: 1}) }}"
                    class="usa-pagination__button"
                    aria-label="Page 1">
                    1
                </a>
            </li>
            <li
                class="usa-pagination__item usa-pagination__overflow"
                aria-label="ellipsis indicating non-visible pages">
                <span>…</span>
            </li>
            {% endif %}

            {% for i in lowerBound..upperBound %}
            <li class="usa-pagination__item usa-pagination__page-no">
                <a  href="{{ url ~ '?' ~ query|merge({page: i}) }}"
                    class="usa-pagination__button {{ pageNumber==i ? 'usa-current' : ''}}"
                    aria-label="{{ _('page') }} {{ i }}">
                    {{ i }}
                </a>
            </li>
            {% endfor %}


            {% if pageNumber <= (pageCount - 2) %}
            <li
                class="usa-pagination__item usa-pagination__overflow"
                aria-label="ellipsis indicating non-visible pages">
                <span>…</span>
            </li>
            <li class="usa-pagination__item usa-pagination__page-no">
                <a
                    href="{{ url ~ '?' ~ query|merge({page: pageCount}) }}"
                    class="usa-pagination__button"
                    aria-label="Last page, page {{ pageCount }}">
                    {{ pageCount }}
                </a>
            </li>
            {% endif %}


            {% if pageNumber != upperBound %}
            <li class="usa-pagination__item usa-pagination__arrow">
                <a
                    href="{{ url ~ '?' ~ query|merge({page: pageNumber + 1}) }}"
                    class="usa-pagination__link usa-pagination__next-page"
                    aria-label="Next page">
                    <span class="usa-pagination__link-text">Next </span>
                    <svg class="usa-icon" aria-hidden="true" role="img">
                        <use href="{{ USWDS_URL }}/img/sprite.svg#navigate_next"></use>
                    </svg>
                </a>
            </li>
            {% endif %}
        </ul>
    </nav>
{% endmacro %}
