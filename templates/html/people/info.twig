{% extends "html/layouts/default.twig" %}
{% block content %}
<section class="grid-container">
    <header><h1>{{ person.getFullname() }}</h1></header>
    {% if actionLinks %}
    {{ include('html/partials/actionLinks.twig') }}
    {% endif %}
    {{ include('html/people/partials/info.twig') }}
</section>

{% if members %}
<section class="grid-container">
    <header><h2>{{ _(['membership', 'memberships', 10]) }}</h2></header>

    <table>
        {% for m in members %}
        <tr><td><a href="{{ uri('committees.members', {id:m.committee_id}) }}">{{ m.committee_name }}</a></td>
            <td>{{ m.offices|join(', ') }}</td>
            <td>{{ m.startDate }} - {{ m.endDate }}</td>
        </tr>
        {% endfor %}
    </table>
</section>
{% endif %}

{% if liaisons %}
<section class="grid-container">
    <header><h2>{{ _(['liaisonship', 'liaisonships', 10]) }}</h2></header>

    <table>
        {% for l in liaisons %}
        <tr><td><a href="{{ uri('committees.liaisons', {id:l.committee_id}) }}">{{ l.committee_name }}</a></td>
            <td>{{ _(l.type) }}</td>
        </tr>
        {% endfor %}
    </table>
</section>
{% endif %}

{% endblock %}
