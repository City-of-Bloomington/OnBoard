{% extends "html/layouts/default.twig" %}
{% block content %}
<section class="grid-container">
    <header><h1>{{ person.getFullname() }}</h1></header>
    {% if actionLinks %}
    {{ include('html/partials/actionLinks.twig') }}
    {% endif %}
    {{ include('html/people/partials/info.twig') }}
</section>

{% if members %}
<section class="grid-container">
    <header><h2>{{ _(['membership', 'memberships', 10]) }}</h2></header>

    <table class="usa-table usa-table--compact">
        <thead>
            <tr>
                <th>{{ _('committee'   ) }}</th>
                <th>{{ _('office'      ) }}</th>
                <th>{{ _('start'      ) }} - {{ _('end'      ) }}</th>
        </tr>
        </thead>
        <tbody>
        {% for m in members %}
        <tr><td><a class="usa-link" href="{{ uri('committees.members', {id:m.committee_id}) }}">{{ m.committee_name }}</a></td>
            <td>{{ m.offices|join(', ') }}</td>
            <td>{{ m.startDate }} - {{ m.endDate }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</section>
{% endif %}

{% if liaisons %}
<section class="grid-container">
    <header><h2>{{ _(['liaisonship', 'liaisonships', 10]) }}</h2></header>

    <table class="usa-table usa-table--compact">
    <thead>
        <tr>
            <th>{{ _('committee'   ) }}</th>
            <th>{{ _('type'      ) }}</th>
        </tr>
    </thead>
    <tbody>
        {% for l in liaisons %}
        <tr><td><a class="usa-link" href="{{ uri('committees.liaisons', {id:l.committee_id}) }}">{{ l.committee_name }}</a></td>
            <td>{{ _(l.type) }}</td>
        </tr>
        {% endfor %}
    </tbody>
    </table>
</section>
{% endif %}

{% endblock %}
