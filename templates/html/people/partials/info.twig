{% import 'html/macros/forms.twig' as forms %}
<table class="usa-table usa-table--compact">
    <tr><th>{{ _('username') }}</th>
        <td>{{ person.getUsername() }}
            {% if person.getUsername() and isAllowed('users', 'delete') %}
            {{ forms.actionLink(uri('users.delete', { person_id: person.getId() }) ~ '?return_url=' ~ return_url,
                                  _('delete_account'),
                                    'delete' ) }}
            {% endif %}

            {% if not person.getUsername() and isAllowed('users', 'update') %}
            {{ forms.actionLink(uri('users.update', { person_id: person.getId() } ) ~ '?return_url=' ~ return_url,
                                  _('create_account'),
                                    'add' ) }}
            {% endif %}
        </td>
    </tr>
    <tr><th>{{ _('website' ) }}</th><td><a href="{{ person.getWebsite()}}">{{ person.getWebsite() }}</a></td></tr>
    <tr><th>{{ _('occupation') }}</th><td>{{ person.getOccupation() }}</td></tr>
</table>
