{% extends "html/layouts/default.twig" %}
{% import  "html/macros/forms.twig" as forms %}
{% block content %}
<section>
    <header><h1>{{ email.person.fullname }}</h1></header>
    {% if isAllowed('people', 'viewContactInfo') %}
    {{ include('html/people/partials/info.twig', { person: email.person }) }}
    {% endif %}

    <form           class="usa-form" method="post">
        <fieldset   class="usa-fieldset">
            <legend class="usa-legend">{{ email.id ? _('email_edit') : _('email_add') }}</legend>

            {{ forms.field_email('email', 'email', _('email'), email.email ) }}
            {{ forms.field_bool('main',   'main',  _('main' ), email.main  ) }}

            {{ forms.button('submit', _('save'), 'save') }}
            {{ forms.actionLink(return_url, _('cancel'), 'cancel' ) }}
        </fieldset>
    </form>
</section>
{% endblock %}
