{% extends "html/layouts/default.twig" %}
{% import  "html/macros/forms.twig"         as forms   %}
{% block content %}
<section>
    <header>
        <h1>{{ department.getId() ? _('department_edit') : _('department_add') }}</h1>
    </header>
    <form method="post">
        <fieldset>
            <input name="department_id" type="hidden" value="{{ department.getId() }}" />

            {{ forms.field_text('name', 'name', _('name'), department.getName(), true ) }}

            {{ forms.button('submit', _('save'), 'save') }}
            {{ forms.actionLink(uri('departments.index'), _('cancel'), 'cancel') }}
        </fieldset>
    </form>
</section>
{% endblock %}
