{% extends "html/layouts/committee.twig" %}
{% import  "html/macros/forms.twig" as forms %}
{% block content %}
<section class="grid-container">
    <header>
        <h1>{{ seat.name }}</h1>
    </header>
    {% if seatActions is defined %}
    {{ include('html/partials/actionLinks.twig', {actionLinks: seatActions}, with_context=false) }}
    {% endif %}

    {{ include('html/seats/partials/seat_info.twig') }}

    {% if seat.getType() == 'termed' %}
    <section>
        <header><h2>{{ _(['term', 'terms', 10]) }}</h2></header>

        {% if termActions %}
        {{ include('html/partials/actionLinks.twig', {actionLinks: termActions}, with_context=false) }}
        {% endif %}
        <ul class="add-list-reset grid-row margin-y-3">
            {% for t in terms %}
            <li class="grid-col-12">
                <div class="hover:bg-base-lightest border-1px border-base-lightest radius-md padding-x-1 padding-bottom-1">
                    <div class="grid-row flex-row">
                        <div class="grid-col flex-1 display-flex flex-align-center">
                            <h3>{{ t.startDate|date('m/d/Y') }} - {{ t.endDate|date('m/d/Y') }}</h3>
                        </div>
                    </div>
                    <div class="flex-row margin-bottom-1">
                        {% for m in t.members %}
                        <div class="grid-row margin-bottom-1">
                            <div class="grid-col"><strong>{{ _(['member', 'members', 0]) }}:</strong> <a class="usa-link" href="{{ uri('members.view', {'id':m.member_id}) }}">{{ m.name }}</a></div>
                            <div class="grid-col"><strong>{{ _('start'                 ) }}:</strong> {{ m.startDate|date('m/d/Y') }}</div>
                            <div class="grid-col"><strong>{{ _('end'                   ) }}:</strong> {{ m.endDate ? m.endDate|date('m/d/Y') : '' }}</div>
                        </div>
                        {% endfor %}
                    </div>
                    <div class="grid-row margin-bottom-1">
                        {% for a in t.alternates %}
                            <div class="grid-col"><strong>{{ _(['alternate', 'alternates', 0]) }}:</strong> <a class="usa-link" href="{{ uri('alternates.view', {'id':a.alternate_id}) }}">{{ a.name }}</a></div>
                            <div class="grid-col"><strong>{{ _('start'                       ) }}:</strong> {{ a.startDate|date('m/d/Y') }}</div>
                            <div class="grid-col"><strong>{{ _('end'                         ) }}:</strong> {{ a.endDate|date('m/d/Y') }}</div>
                        {% endfor %}
                    </div>
                    <div class="grid-row flex-1 margin-top-2">
                        <div class="grid-col">
                        {% if t.actionLinks %}{{ include('html/partials/actionLinks.twig', {actionLinks: t.actionLinks}, with_context=false) }}{% endif %}
                        </div>
                    </div>
                </div>
            </li>
            {% endfor %}
        </ul>
    </section>

