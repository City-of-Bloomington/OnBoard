{% extends "html/layouts/default.twig" %}
{% block content %}
{{ include('html/committees/breadcrumbs.twig') }}
<section>
    <header><h2>{{ _('seat_edit') }}</h2></header>

    <form method="post">
        <fieldset><legend>{{ _('info_seat') }}</legend>
            <input name="seat_id" type="hidden" value="{{ seat.getId() }}" />

            <div class="form-group">
                <label  for="code">{{ _('code') }}</label>
                <input name="code" class="form-control"
                         id="code" required="true"
                         value="{{ seat.getCode() }}" />
            </div>
            <div class="form-group">
                <label  for="name">{{ _('name') }}</label>
                <input name="name" class="form-control"
                         id="name" required="true"
                         value="{{ seat.getName() }}"  />
            </div>
            <div class="form-group">
                <label   for="appointer_id">{{ _('appointer') }}</label>
                <select name="appointer_id" class="form-control"
                          id="appointer_id">
                {% for a in appointers %}
                <option value="{{ a.id }}" {{ a.id==seat.getAppointer_id() ? 'selected="true"' : '' }}>{{ a.name }}</option>
                {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label  for="startDate">{{ _('startDate') }}</label>
                <input name="startDate" class="form-control"
                         id="startDate" type="date"
                         value="{{ seat.getStartDate('Y-m-d') }}" />
            </div>
            <div class="form-check form-switch">
                <label  for="voting" class="form-check-label">{{ _('voting') }}</label>
                <input name="voting" class="form-check-input"
                         id="voting" type="checkbox" role="switch"
                         value="1" {{ seat.getVoting() ? 'checked="true"' : '' }} />
            </div>
            <div class="form-check form-switch">
                <label  for="takesApplications" class="form-check-label">{{ _('takesApplications') }}</label>
                <input name="takesApplications" class="form-check-input"
                         id="takesApplications" type="checkbox" role="switch"
                         value="1" {{ seat.getTakesApplications() ? 'checked="true"' : '' }} />
            </div>
        </fieldset>

        <fieldset><legend>{{ _('info_term') }}</legend>
            <div class="form-group">
                <label   for="type">{{ _('type') }}</label>
                <select name="type" class="form-control"
                          id="type">
                {% for t in types %}
                <option value="{{ t }}" {{ t==seat.getType() ? 'selected="true"' : '' }}>{{ _(t) }}</option>
                {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label   for="termLength">{{ _('termLength') }}</label>
                <select name="termLength" class="form-control"
                          id="termLength">
                {% for interval, label in termIntervals %}
                <option value="{{ interval }}" {{ interval==seat.getTermLength() ? 'selected="true"' : '' }}>{{ label }}</option>
                {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label   for="termModifer">{{ _('termModifer') }}</label>
                <select name="termModifer" class="form-control"
                          id="termModifer">
                {% for modifier, label in termModifiers %}
                <option value="{{ modifier }}" {{ modifier==seat.getTermModifier() ? 'selected="true"' : '' }}>{{ label }}</option>
                {% endfor %}
                </select>
            </div>
        </fieldset>

        <fieldset><legend>{{ _(['requirement', 'requirements', 10]) }}</legend>
            <textarea name="requirements" class="form-control">{{ seat.getRequirements() }}</textarea>
        </fieldset>

        <fieldset>
            <button type="submit" class="btn btn-success">{{ _('save') }}</button>
            <a class="btn btn-danger"
                href="{{ uri('seats.view') }}?seat_id={{ seat.getId() }}">
               {{ _('cancel') }}
            </a>
        </fieldset>
    </form>
</section>

{% endblock %}
