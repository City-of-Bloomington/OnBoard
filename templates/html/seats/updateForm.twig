{% extends "html/layouts/default.twig" %}
{% import  "html/macros/forms.twig" as forms %}
{% block content %}
<section>
    <header><h2>{{ _('seat_edit') }}</h2></header>

    <form method="post">
        {{ include('html/seats/partials/formFields.twig') }}

        <fieldset>
            <input name="committee_id" type="hidden" value="{{ committee.getId() }}" />

            {{ forms.button('submit', _('save'), 'save') }}
            {% if seat.getId() %}
            {{ forms.actionLink(uri('seats.view', {id: seat.getId()}), _('cancel'), 'cancel') }}
            {% else %}
            {{ forms.actionLink(uri('committees.seats', {id: committee.getId()}), _('cancel'), 'cancel') }}
            {% endif %}
        </fieldset>
    </form>
</section>
{{ include('html/seats/partials/summary.twig') }}
{% endblock %}
