{% extends "html/layouts/default.twig" %}
{% import  "html/macros/forms.twig" as forms %}
{% block content %}
<section>
    <header><h2>{{ _('seat_end') }}</h2></header>

    <form method="post">
        <fieldset>
            <input name="seat_id" type="hidden" value="{{ seat.getId() }}" />

            <div class="form-group">
                <label  for="endDate">{{ _('endDate') }}</label>
                <input name="endDate" class="form-control"
                         id="endDate" type="date"
                    value="{{ 'now'|date('Y-m-d') }}" />
            </div>

            {{ forms.button('submit', _('save'), 'save') }}
            {{ forms.actionLink(uri('seats.view', {id: seat.getId()}), _('cancel'), 'cancel') }}
        </fieldset>
    </form>
</section>

{% endblock %}
