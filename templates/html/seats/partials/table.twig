<table class="usa-table usa-table--borderless usa-table--stacked">
    <thead>
        <tr><th scope="col">{{ _('committee'     ) }}</th>
            <th scope="col">{{ _('seat'          ) }}</th>
            <th scope="col">{{ _('start'         ) }}</th>
            <th scope="col">{{ _('end'           ) }}</th>
            <th scope="col">{{ _('seat_status'   ) }}</th>
            <th scope="col">{{ _('appointed_by'  ) }}</th>
            <th scope="col">{{ _('name'          ) }}</th>
        </tr>
    </thead>
    <tbody>
    {% for row in data %}
    {% set class = (row.termEndsSoon or row.carryOver) ? '<span class="font-mono-2xs bg-gold padding-x-05 radius-sm display-inline-block">expiring</span>' : '<span class="font-mono-2xs bg-gray-10 padding-x-05 radius-sm display-inline-block">filled</span>' %}
    {% set class = (not row.member_id)                 ? '<span class="font-mono-2xs text-white bg-secondary-dark padding-x-05 radius-sm display-inline-block">vacant</span>'  : class %}
    <tr>
        <td><a class="usa-link" href="{{ uri('committees.members', { committee_id: row.committee_id }) }}">{{ row.committee_name }}</a></td>
        <td>{{ row.seat_name }}</td>
        {% if row.seat_type=='termed' %}
        <td class="font-mono-2xs">{{ row.term_startDate ? row.term_startDate|date('m/d/Y') : '' }}</td>
        <td class="font-mono-2xs">{{ row.term_endDate   ? row.term_endDate  |date('m/d/Y') : '' }}</td>
        {% else %}
        <td class="font-mono-2xs">{{ row.member_startDate ? row.member_startDate|date('m/d/Y') : '' }}</td>
        <td class="font-mono-2xs">{{ row.member_endDate   ? row.member_endDate  |date('m/d/Y') : '' }}</td>
        {% endif %}
        <td>{{ class|raw }}</td>
        <td>{{ row.appointer_name }}{{ row.seat_voting ? ' (Voting)' : '' }}</td>
        <td>{{ row.member_firstname }} {{ row.member_lastname }}
            {{ row.offices }}
            {{ row.alternate_firstname }} {{ row.alternate_lastname }}
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
