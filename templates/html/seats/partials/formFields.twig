{% import  "html/macros/forms.twig" as forms %}
<fieldset class="usa-fieldset margin-bottom-3"><legend class="usa-legend usa-legend--large">{{ _('info_seat') }}</legend>
    {{ forms.field_text  ('code',         'code',         _('code'),      seat.getCode(),                     true) }}
    {{ forms.field_text  ('name',         'name',         _('name'),      seat.getName(),                     true) }}
    {{ forms.field_select('appointer_id', 'appointer_id', _('appointer'), seat.getAppointer_id(), appointers, true) }}
    {{ forms.field_date  ('startDate',    'startDate',    _('startDate'), seat.getStartDate('Y-m-d')) }}
    {{ forms.field_bool  ('voting',       'voting',       _('voting'),    seat.getVoting() ) }}
    {{ forms.field_bool  ('takesApplications', 'takesApplications', _('takesApplications'), seat.getTakesApplications() ) }}
</fieldset>

<fieldset class="usa-fieldset margin-bottom-3">
    <legend class="usa-legend usa-legend--large">{{ _('info_term') }}</legend>

    {{ forms.field_select('type',         'type',         _('type'),         seat.getType(),         types, true ) }}
    {{ forms.field_select('termLength',   'termLength',   _('termLength'),   seat.getTermLength(),   termIntervals) }}
    {{ forms.field_select('termModifier', 'termModifier', _('termModifier'), seat.getTermModifier(), termModifiers) }}
</fieldset>

<fieldset class="usa-fieldset margin-bottom-3">
    <legend class="usa-legend usa-legend--large">{{ _(['requirement', 'requirements', 10]) }}</legend>
    <textarea name="requirements" class="usa-textarea">{{ seat.getRequirements() }}</textarea>
</fieldset>
