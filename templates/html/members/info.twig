{% extends "html/layouts/committee.twig" %}
{% block content %}
<section>
    <header>
        <h2>{{ member.getPerson().getFirstname() }} {{ member.getPerson().getLastname() }}</h2>
        {% if actionLinks %}
        {{ include('html/partials/actionLinks.twig') }}
        {% endif %}
    </header>
    {% if term %}
    {{ include('html/terms/partials/info.twig') }}
    {% endif %}

    {% if seat %}
    {{ include('html/seats/partials/seat_info.twig') }}
    {% endif %}
</section>

{% endblock %}
