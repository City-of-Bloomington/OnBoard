{% import "html/macros/forms.twig" as forms %}
{% for l in legislation %}
<article>
    <header>
        <h2><a href="{{ uri('legislation.view', {id: l.getId()}) }}">{{ l.getType() }} {{ l.getNumber() }} {{ l.getStatus() ? l.getStatus().getName() : '' }}</a>
            {% for f in l.getFiles() %}
                {{ forms.actionLink(uri('legislationFiles.download', {id: f.getId()}), _('download'), 'download') }}
            {% endfor %}
        </h2>
        <h3>{{ l.getTitle() }}</h3>
    </header>
</article>
{% endfor %}
