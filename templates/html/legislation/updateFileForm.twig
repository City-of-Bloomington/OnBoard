{% extends "html/layouts/default.twig" %}
{% import  "html/macros/forms.twig"      as forms      %}
{% block content %}
<section>
    <header><h2>{{ file.getLegislation().getTitle() }}</h2></header>
    <form method="post" enctype="multipart/form-data">
        <fieldset>
            <legend>{{ file.getId() ? _('legislationFile_edit') : _('legislationFile_add') }}</legend>
            <input type="hidden" name="legislationFile_id" value="{{ file.getId() }}" />
            <input type="hidden" name="legislation_id"     value="{{ file.getLegislation_id() }}" />

            <div class="mb-3">
                <label for="legislationFile">{{ _('legislationFile') }}</label>
                {% if file.getFilename() -%}
                <div><a href="{{ uri('legislationFiles.download') ~ '?legislationFile_id=' ~ file.getId() }}">{{ file.getFilename() }}</a></div>
                {%- endif %}
                <input id ="legislationFile" name="legislationFile" type="file" aria-describedby="legislationFile-help" />
                <div id="legislationFile-help">
                    <input name="MAX_FILE_SIZE" type="hidden" value="{{ maxBytes }}" />
                    <div>{{ maxSize }}</div>
                    <div>{{ accept  }}</div>
                </div>
            </div>

            {{ forms.button('submit', _('save'), 'save') }}
            {{ forms.actionLink(return_url , _('cancel'), 'cancel') }}
        </fieldset>
    </form>

</section>
{% endblock %}
