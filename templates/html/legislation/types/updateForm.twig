{% extends "html/layouts/default.twig" %}
{% import  "html/macros/forms.twig" as forms %}
{% block content %}
<section class="grid-container">
    <header><h2>{{ type.getId() ? _('legislationType_edit') : _('legislationType_add') }}</h2></header>

    <form         class="usa-form" method="post">
        <fieldset class="usa-fieldset">
            {{ forms.field_text('name', 'name', _('name'), type.getName(), true ) }}
            {{ forms.field_bool('subtype', 'subtype', _('subtype'), type.getSubtype() ) }}

            {{ forms.button('submit', _('save'), 'save') }}
            {{ forms.actionLink(uri('legislationTypes.index'), _('cancel'), 'cancel') }}
        </fieldset>
    </form>
</section>
{% endblock %}

