{% extends "html/layouts/default.twig" %}
{% import  "html/macros/forms.twig" as forms %}
{% block content %}
<section class="grid-container">
    <header><h2>{{ race.getId() ? _('race_edit') : _('race_add') }}</h2></header>

    <form         class="usa-form" method="post">
        <fieldset class="usa-fieldset">
            {{ forms.field_text('name', 'name', _('name'), race.getName(), true )}}
            {{ forms.button('submit', _('save'), 'save') }}
            {{ forms.actionLink(uri('races.index'), _('cancel'), 'cancel') }}
        </fieldset>
    </form>
</section>

{% endblock %}
